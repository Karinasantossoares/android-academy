<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_training_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Treino de pernas" />


        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="14dp"
            android:background="#00C689"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_training_view_pager" />



        <TextView
            android:id="@+id/description_training_view_pager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:minLines="1"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            tools:text="Treino segunda quarta e sexta Treino segunda quarta e sexta Treino segunda quarta e sexta Treino segunda quarta e sexta" />


        <TextView
            android:id="@+id/tv_create_training_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_training_view_pager"
            android:text="@string/texte_create"
            android:fontFamily="@font/open_sans_light" />

        <TextView
            android:id="@+id/tv_date_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/tv_create_training_in"
            app:layout_constraintTop_toBottomOf="@id/description_training_view_pager"
            tools:text="12/12/2012"
            android:fontFamily="@font/open_sans_light" />

        <TextView
            android:id="@+id/delete_training"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="120dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/open_sans_light"
            android:padding="10dp"
            android:text="@string/excluir"
            android:textColor="@color/coloPrimary"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_training_view_pager" />

        <TextView
            android:id="@+id/edit_training"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/open_sans_light"
            android:padding="10dp"
            android:text="@string/editar"
            android:textColor="@color/coloPrimary"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/delete_training"
            app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="@id/delete_training"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>